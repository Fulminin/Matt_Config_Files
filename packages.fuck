#!/bin/bash

# List of packages to install
packageList=(
	open-21-jdk
	clang-18
	lidb-18
	lid-18
	cmake
	python3
	)

# converting to package manager
# default apt (debian/ubuntu/raspian)
mana=apt
task=(install update)

# fedora/Redhet
if which dnf; then
	$mana=dnf
# Arch
elif which pacman; then
	$mana=pacman
	${task[0]}=-S
# Unknown
else
	exit 1
fi

# Installing Packages
for paks in ${packageList[@]}
	sudo $mana $paks